{
  "name": "sfc-backend",
  "version": "1.0.0",
  "description": "A backend service for streak for cash.",
  "engines": {
    "node": "12.x"
  },
  "main": "index.js",
  "scripts": {
    "test": "cross-env SFC_NODE_ENV=test nyc --reporter=text --reporter=html mocha -c -r esm test/**/*.test.js --timeout 12000 --exit",
    "pretest": "cross-env SFC_NODE_ENV=test npm run migrate:reset && cross-env SFC_NODE_ENV=test npm run migrate up && npm run lint",
    "prestart": "cross-env SFC_NODE_ENV=production npm run migrate:up",
    "start": "node -r esm .",
    "dev": "nodemon -r esm .",
    "migrate": "db-migrate --migrations-dir ./app/db/migrations",
    "migrate:up": "npm run migrate up",
    "migrate:down": "npm run migrate down",
    "migrate:reset": "npm run migrate reset",
    "migrate:create": "npm run migrate create",
    "seed:create": "npm run migrate create:seeds",
    "seed:up": "npm run migrate up:seeds",
    "seed:down": "npm run migrate down:seeds",
    "seed:reset": "npm run migrate reset:seeds",
    "lint": "eslint --ext .js ./",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "coverage": "nyc cat ./coverage/lcov.info | coveralls"
  },
  "author": "[addempsea, iamtope, teezyfortune]",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/addempsea/streakforcash-api.git"
  },
  "keywords": [
    "sfc",
    "fantasy",
    "information",
    "sport",
    "game"
  ],
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "extend": "^3.0.2",
    "mocha": "^7.1.1",
    "nyc": "^15.1.0"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "app-root-path": "^3.0.0",
    "bcrypt": "^4.0.1",
    "bluebird": "^3.7.2",
    "cors": "^2.8.5",
    "cron-cluster": "^1.1.3",
    "cross-env": "^7.0.2",
    "db-migrate": "^0.11.9",
    "db-migrate-pg": "^1.0.0",
    "ddos": "^0.2.1",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "helmet": "^3.22.0",
    "husky": "^4.2.5",
    "js-sha256": "^0.9.0",
    "jsonwebtoken": "^8.5.1",
    "kue": "^0.11.6",
    "mailgen": "^2.0.13",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.2",
    "pg-promise": "^10.4.4",
    "raw-body": "^2.4.1",
    "redis": "^3.0.2",
    "uuid": "^7.0.3",
    "winston": "^3.2.1"
  }
}
